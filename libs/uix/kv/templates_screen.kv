<TemplatesScreen>:

	MDBoxLayout:
		orientation: "vertical"
		MDToolbar:
			title: "Select Your Template"
			anchor_title: "center"
			md_bg_color: self.theme_cls.bg_normal
			left_action_items: [["arrow-left", lambda x: root.change_to_home()]]
			right_action_items: [["arrow-right", lambda x: root.change_to_get_details()]]

		ScrollView:

			MDGridLayout:
				id: container
				cols: 3
				padding: dp(20)
				spacing: dp(20)
				adaptive_height: True

				CustomImage:
					name: "empty"
				CustomImage:
					name: "basic"
				CustomImage:
					name: "bottom-navigation"
				CustomImage:
					name: "tab"
				CustomImage:
					name: "navigation-drawer"
				CustomImage:
					name: "backdrop"

<CustomImage>:
	orientation: "vertical"
	adaptive_height: True
	spacing: dp(10)
	padding: dp(5)

	Image:
		source: "assets/images/templates/" + root.name + ".png"
	    size_hint_y: None
	    height: dp(340)

	CustomLabel:
		text: (root.name).title()
		halign: "center"
		font_style: "H6" if root.use_toggle_behavior else "Body1"